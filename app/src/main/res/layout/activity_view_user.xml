<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.techinterview.elementz.techinterviewapp.ViewUserActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivViewUser"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Name: "
    android:id="@+id/tvViewUserName"
    android:layout_below="@+id/ivViewUser"
    android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthday: "
        android:id="@+id/tvViewUserBday"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvViewUserName"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age: "
        android:id="@+id/tvViewUserAge"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvViewUserBday"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Days Till Next Bday:  "
        android:id="@+id/tvViewUserNextBday"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvViewUserAge"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sex:"
        android:id="@+id/tvViewUserSex"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvViewUserNextBday"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:onClick="onClick"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvViewUserSex"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
